<?xml version="1.0" encoding="UTF-8"?>
<component name="Menu" extends="Group">
    <children>
        <Rectangle id="left" color="#FFFFFF" />
        <Rectangle id="right" color="#001C30" />
        <MenuWallpapers id="menuWallpapers" />
        <Label
            id="title"
            text="LightSaver"
            horizAlign="center"
            color="#001C30"
        />
        <LabelList
            id="menuSelection"
            color="#000000"
            vertFocusAnimationStyle="floatingFocus"
        >
            <ContentNode id="menuContent" role="content">
                <ContentNode title="Start Wallpaper" />
                <ContentNode title="Change Images" />
                <ContentNode title="Settings" />
            </ContentNode>
        </LabelList>
        <MenuBase id="getPhotosFadeScreen" opacity="0" />
        <Animation
            id="getPhotosFadeOut"
            repeat="false"
            easeFunction="inQuad"
            duration="0.5">
            <FloatFieldInterpolator
                id="getPhotosFadeOutInterp"
                key="[0.0,1.0]"
                KeyValue="[0.0,1.0]"
                fieldToInterp="getPhotosFadeScreen.opacity"
            />
        </Animation>
    </children>
    <script type="text/brightscript" uri="Menu.brs" />
</component>