<?xml version="1.0" encoding="UTF-8"?>
<component name="GetPhotos" extends="Group">
    <children>
        <Rectangle id="left" color="#FFFFFF" />
        <Rectangle id="right" color="#001f3f" />
        <Label
            id="sessionCode"
            text=""
            horizAlign="center"
            color="#FFFFFF"
            opacity="0"
        />
        <Label
            id="title"
            text="LightSaver"
            horizAlign="center"
            color="#001f3f"
        />
        <Label
            id="directions1"
            text="SCAN THE QR CODE"
            horizAlign="center"
            color="#001f3f"
        />
        <Label
            id="or"
            text="or"
            horizAlign="center"
            color="#001f3f"
        />
        <Label
            id="navigate"
            text="NAVIGATE TO"
            horizAlign="center"
            color="#001f3f"
        />
        <Label
            id="link"
            text="https://lightsaver.app"
            horizAlign="center"
            color="#001f3f"
        />
        <Label
            id="directions2"
            text="Enter your Session Code"
            horizAlign="center"
            color="#001f3f"
        />
        <Animation
            id="fadeInAnimation"
            repeat="false"
            easeFunction="inQuad"
            duration="1.0">
            <FloatFieldInterpolator
                id="animateOutInterp"
                key="[0.0,1.0]"
                KeyValue="[0.0,1.0]"
                fieldToInterp="sessionCode.opacity"
            />
        </Animation>
        <Animation
            id="fadeOutAnimation"
            repeat="false"
            easeFunction="inQuad"
            duration="1.0">
            <FloatFieldInterpolator
                id="animateInInterp"
                key="[0.0,1.0]"
                KeyValue="[1.0,0.0]"
                fieldToInterp="sessionCode.opacity"
            />
        </Animation>
        <GetSessionCode id="GetSessionCodeTask" />
        <PollLightSaverWebApp id="PollLightSaverWebAppTask" />
        <GetResourcePackage id="GetResourcePackageTask" />
    </children>
    <script type="text/brightscript" uri="GetPhotos.brs" />
</component>