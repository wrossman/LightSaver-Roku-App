<?xml version="1.0" encoding="UTF-8"?>
<component name="GetPhotos" extends="Group">
    <children>
        <Rectangle id="left" color="#FFFFFF" />
        <Rectangle id="right" color="#001C30" />
        <Label
            id="sessionCode"
            text=""
            horizAlign="center"
            color="#FFFFFF"
            opacity="0"
        />
        <Label
            id="title"
            text="LightSaver"
            horizAlign="center"
            color="#001C30"
        />
        <Label
            id="directions1"
            text="SCAN THE QR CODE"
            horizAlign="center"
            color="#001C30"
        />
        <Label
            id="or"
            text="or"
            horizAlign="center"
            color="#001C30"
        />
        <Label
            id="navigate"
            text="NAVIGATE TO"
            horizAlign="center"
            color="#001C30"
        />
        <Label
            id="link"
            text="https://roku.lightsaver.photos"
            horizAlign="center"
            color="#001C30"
        />
        <Label
            id="directions2"
            text="Enter your Session Code"
            horizAlign="center"
            color="#001C30"
        />
        <Poster id="qrCode" uri="pkg:/components/data/qr-code.png" />
        <MenuBase id="fromMenuFade" opacity="100" />
        <Rectangle id="fadeRect" opacity="0" color="0xFFFFFF" />
        <Animation
            id="fromMenuFadeIn"
            repeat="false"
            easeFunction="inQuad"
            duration="0.5">
            <FloatFieldInterpolator
                id="fromMenuFadeInInterp"
                key="[0.0,1.0]"
                KeyValue="[1.0,0.0]"
                fieldToInterp="fromMenuFade.opacity"
            />
        </Animation>
        <Animation
            id="screenFadeInAnimation"
            repeat="false"
            easeFunction="inQuad"
            duration="1.5">
            <FloatFieldInterpolator
                id="screenAnimateOutInterp"
                key="[0.0,1.0]"
                KeyValue="[1.0,0.0]"
                fieldToInterp="fadeRect.opacity"
            />
        </Animation>
        <Animation
            id="fadeInAnimation"
            repeat="false"
            easeFunction="inQuad"
            duration="1.0">
            <FloatFieldInterpolator
                id="animateOutInterp"
                key="[0.0,1.0]"
                KeyValue="[0.0,1.0]"
                fieldToInterp="sessionCode.opacity"
            />
        </Animation>
        <Animation
            id="fadeOutAnimation"
            repeat="false"
            easeFunction="inQuad"
            duration="1.0">
            <FloatFieldInterpolator
                id="animateInInterp"
                key="[0.0,1.0]"
                KeyValue="[1.0,0.0]"
                fieldToInterp="sessionCode.opacity"
            />
        </Animation>
        <GetSessionCode id="GetSessionCodeTask" />
        <PollLightSaverWebApp id="PollLightSaverWebAppTask" />
        <GetResourcePackage id="GetResourcePackageTask" />
    </children>
    <script type="text/brightscript" uri="GetPhotos.brs" />
</component>