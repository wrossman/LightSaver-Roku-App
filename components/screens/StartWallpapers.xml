<?xml version="1.0" encoding="utf-8"?>
<component name="StartWallpapers" extends="Group">
    <children>
        <Video
            id="bgVideo"
            visible="false"
            enableUI="false"
            loop="true" />
        <Rectangle id="solidBackground" color="0xFFFFFF" />
        <Poster id="backgroundImg" loadDisplayMode="scaleToFit" />
        <Poster id="currWallpaper" loadDisplayMode="scaleToFit" />
        <Rectangle id="fadeRect" opacity="100" color="0xFFFFFF" />
        <Rectangle id="startFadeRect" opacity="0" color="0xFFFFFF" />
        <Timer id="picTimer" />
        <InitialGetResource id="InitialGetResourceTask" />
        <PollLightroomUpdate id="PollLightroomUpdateTask" />
        <GetNextImage id="GetNextImageTask" />
        <GetNextBackground id="GetNextBackgroundTask" />
        <GetLinksFromRegistry id="GetLinksFromRegistryTask" />
        <RemoveTempFiles id="RemoveTempFilesTask" />
        <Animation
            id="screenFadeInAnimation"
            repeat="false"
            easeFunction="inQuad"
            duration="0.5">
            <FloatFieldInterpolator
                id="screenAnimateOutInterp"
                key="[0.0,1.0]"
                KeyValue="[1.0,0.0]"
                fieldToInterp="startFadeRect.opacity"
            />
        </Animation>
        <Animation
            id="fadeOutAnimation"
            repeat="false"
            easeFunction="inQuad"
            duration="0.75">
            <FloatFieldInterpolator
                id="animateOutInterp"
                key="[0.0,1.0]"
                KeyValue="[0.0,1.0]"
                fieldToInterp="fadeRect.opacity"
            />
        </Animation>
        <Animation
            id="fadeInAnimation"
            repeat="false"
            easeFunction="inQuad"
            duration="0.75">
            <FloatFieldInterpolator
                id="animateInInterp"
                key="[0.0,1.0]"
                KeyValue="[1.0,0.0]"
                fieldToInterp="fadeRect.opacity"
            />
        </Animation>
    </children>
    <script type="text/brightscript" uri="StartWallpapers.brs" />
</component>